<div class="mt-12">
    <div class="flex items-center justify-start">
        @!titles.titleForm({title: 'Lien nÂ° : ' + (Number(index) + Number(1))})
        <a href="{{route('LinksController.deleteOne', {id: link.id})}}">
            @!btns.btn({text: 'Supprimer le lien', stylediv: "ml-4"})
        </a>
    </div>
    <form up-submit up-target="[main-private]" action="{{route('LinksController.update', { id: link.id }, {
    qs: {
    _method: 'PUT'
    }
    })}}" method="POST" enctype="multipart/form-data">
        <!-- libelle du lien -->
        @!inputs.groupeInput({
        text: 'Libelle* : ',
        placeholder: 'Libelle du lien',
        type: "text",
        required: true,
        name: "libelle",
        oldValue: link ? link.libelle : '',
        })

        <!-- path du lien -->
        @!inputs.groupeInput({
        text: 'Lien https* : ',
        placeholder: 'Lien https du lien',
        type: "text",
        required: true,
        name: "path",
        oldValue: link ? link.path : '',
        })

        <!-- image du lien -->
        @!inputs.groupeInput({
        text: 'Image : ',
        placeholder: 'Image du lien',
        type: "file",
        required: false,
        name: "linkImage",
        oldValue: '',
        })

        <div class="flex justify-end mt-8">
            @!btns.btn({text: 'Modifier'})
        </div>
    </form>
</div>